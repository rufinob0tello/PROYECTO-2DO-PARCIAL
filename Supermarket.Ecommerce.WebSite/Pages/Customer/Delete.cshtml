@page
@model Supermarket.Ecommerce.WebSite.Pages.Customer.Delete

<div class="container py-4">
    <h2>Delete Customer</h2>

    <form method="post">
        <input type="hidden" asp-for="Customer.Id" />

        <div class="form-group">
            <label asp-for="Customer.FirstName"></label>
            <input asp-for="Customer.FirstName" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label asp-for="Customer.LastName"></label>
            <input asp-for="Customer.LastName" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label asp-for="Customer.Phone"></label>
            <input asp-for="Customer.Phone" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label asp-for="Customer.Username"></label>
            <input asp-for="Customer.Username" class="form-control" readonly />
        </div>

        <div class="text-end">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-page="./List" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
